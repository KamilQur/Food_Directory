<%= f.text_field :address %>
<br/>
<%= f.label :city %>
<%= f.text_field :city %>
<br/>
<%= f.label :state %>
<%= f.text_field :state %> 
<br/>
<%= f.label :zipcode %>
<%= f.text_field :zipcode %>
<br/>
<%= f.label :phone %>
<%= f.text_field :phone %>
<br/> 
<%= f.label :email %>
<%= f.text_field :email %>
<br/> 
<%= f.file_field :image %><br/>  
<%= f.submit %>  

<% end %>

